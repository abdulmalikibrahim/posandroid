<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:gravity="center"
	android:padding="20dp"> <androidx.cardview.widget.CardView
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	app:cardCornerRadius="24dp"
	app:cardElevation="8dp"
	app:cardUseCompatPadding="true">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#FFFFFF"
		android:orientation="vertical"
		android:padding="24dp">

		<ImageView
			android:layout_width="80dp"
			android:layout_height="80dp"
			android:layout_gravity="center"
			android:src="@drawable/success"
			android:layout_marginBottom="16dp"/>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text="Payment Success!"
			android:textColor="#2D3436"
			android:textSize="20sp"
			android:textStyle="bold" />

		<TextView
			android:id="@+id/tvMetode"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text="E-Receipt"
			android:textColor="#B2BEC3"
			android:textSize="12sp"
			android:layout_marginTop="4dp"/>

		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="#F1F2F6"
			android:layout_marginTop="20dp"
			android:layout_marginBottom="20dp"/>

		<TextView
			android:id="@+id/tvStrukItems"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:fontFamily="monospace"
			android:text="2x Pocari Sweat 500ml"
			android:textColor="#636E72"
			android:textSize="14sp"
			android:lineSpacingExtra="4dp"/>

		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="#F1F2F6"
			android:layout_marginTop="20dp"
			android:layout_marginBottom="20dp"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="Total Amount"
				android:textColor="#B2BEC3"
				android:textSize="14sp" />

			<TextView
				android:id="@+id/tvStrukTotal"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Rp 17.000"
				android:textColor="#2D3436"
				android:textSize="18sp"
				android:textStyle="bold" />
		</LinearLayout>

		<androidx.appcompat.widget.AppCompatButton
			android:id="@+id/btnDoneStruk"
			android:layout_width="match_parent"
			android:layout_height="54dp"
			android:layout_marginTop="30dp"
			android:background="@drawable/bg_button_rounded"
			android:text="Selesai"
			android:textAllCaps="false"
			android:textColor="#FFFFFF"
			android:textSize="16sp"
			android:textStyle="bold" />

		<TextView
			android:id="@+id/btnPrintStruk"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginTop="16dp"
			android:padding="10dp"
			android:text="Print Receipt"
			android:textColor="#0984E3"
			android:textSize="14sp"
			android:textStyle="bold" />

	</LinearLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>
