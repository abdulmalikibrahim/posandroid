<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
	android:shape="rectangle">

	<!-- Warna background tombol -->
	<solid android:color="#EB4343" />

	<!-- Border / garis pinggir -->
	<stroke
		android:width="2dp"
		android:color="#FF0000" />

	<!-- Sudut melengkung -->
	<corners android:radius="30dp" />

	<!-- Padding biar tulisan tombol enak dilihat -->
	<padding
		android:left="16dp"
		android:top="8dp"
		android:right="16dp"
		android:bottom="8dp" />
</shape>
